{
	"compilerOptions": {
		"rootDir": ".",
		"outDir": "dist",
		"target": "es2018",
		"module": "ESNext",
		"sourceMap": true,
		"moduleResolution": "node",
		"allowJs": false,
		"strict": true,
		"noUnusedLocals": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"jsx": "preserve",
		"lib": ["esnext", "dom"],
		"types": [],
		"skipLibCheck": true
	},
	"references": [{ "path": "./tsconfig.node.json" }]
}
